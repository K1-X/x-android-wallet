<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="332dp"
    android:layout_gravity="center"
    android:background="@mipmap/bg_pop"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_common_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="45.5dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="9dp"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:text="" />
    

    <TextView
        android:id="@+id/tv_common_dialog_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="17.5dp"
        android:background="@drawable/dialog_version_bg"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="v1.1.4"
        android:textColor="@color/color_white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tv_common_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="32dp"
            android:paddingRight="@dimen/view_32"
            android:scrollbars="vertical"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            tools:text="1.；\n2.；\n3.UI" />
    </ScrollView>

    <ImageView
        android:id="@+id/tv_common_dialog_right_btn"
        android:layout_width="214dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/btn_update_big"
        android:scaleType="center" />
</LinearLayout>
