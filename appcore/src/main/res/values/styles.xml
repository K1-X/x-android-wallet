<resources>
    <style name="style_loading_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/loading_bg</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <declare-styleable name="CommonActionBar">
        <attr name="showBack" format="boolean" />
        <attr name="showMenu1" format="boolean" />
        <attr name="showMenu2" format="boolean" />
        <attr name="backSrc" format="reference" />
        <attr name="menu1Src" format="reference" />
        <attr name="menu2Src" format="reference" />
        <attr name="titleText" format="string" />
    </declare-styleable> 
    <style name="DialogTranslucentNoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <style name="Text_white_36">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Text_white_32">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">16sp</item>
    </style>
    <dimen name="medium_head_width">80dp</dimen>
    <dimen name="medium_head_height">80dp</dimen>
</resources>
